# syntax=docker/dockerfile:1
# Development Dockerfile for Rails multitenant application

ARG RUBY_VERSION=3.4.7
FROM ruby:$RUBY_VERSION-slim

ARG COMPOSE_NAME=rails_multitenant

# Install dependencies
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    curl \
    git \
    libpq-dev \
    libvips \
    libyaml-dev \
    nodejs \
    pkg-config \
    postgresql-client \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Set working directory
WORKDIR /app

# Install gems (copy Gemfile first for better caching)
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Copy application code
COPY . .

# Add entrypoint script
COPY entrypoint.dev.sh /usr/bin/
RUN chmod +x /usr/bin/entrypoint.dev.sh
ENTRYPOINT ["entrypoint.dev.sh"]

# Expose port 3000
EXPOSE 3000

# Start Rails server
CMD ["rails", "server", "-b", "0.0.0.0"]
